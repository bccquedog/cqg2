{
  "name": "cqg-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:alert": "bash scripts/build-with-alerts.sh",
    "preview": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint",
    "alert:test": "ts-node scripts/deploymentAlert.ts success 15s",
    "seed": "ts-node --project tsconfig.scripts.json scripts/seedDay.ts",
    "create:tournament": "ts-node --project tsconfig.scripts.json src/scripts/createTournamentDayKit.ts",
    "create:tournament-full": "ts-node --project tsconfig.scripts.json src/scripts/createTournamentWithPlayers.ts",
    "create:tournament-complete": "ts-node --project tsconfig.scripts.json src/scripts/createTournamentComplete.ts",
    "seed:admin": "ts-node --project tsconfig.scripts.json src/scripts/seedTournamentsAdmin.ts",
    "seed:gamer": "ts-node --project tsconfig.scripts.json src/scripts/seedWithGamerTags.ts",
    "seed:build": "pnpm build && node lib/scripts/seed.js",
    "reset": "ts-node scripts/reset.ts",
    "seed:test": "ts-node -r tsconfig-paths/register src/utils/seedTestData.ts",
    "rules:dev": "cp firestore.rules.dev firestore.rules",
    "rules:prod": "cp firestore.rules.prod firestore.rules",
    "emulator:dev": "npm run rules:dev && firebase emulators:start --only firestore & sleep 5 && node seed.js",
    "emulator:prod": "npm run rules:prod && firebase emulators:start --only firestore",
    "deploy:rules:dev": "cp firebase.rules.dev firestore.rules && cp storage.rules.dev storage.rules && cp database.rules.dev.json database.rules.json && firebase deploy --only firestore:rules,storage:rules,database:rules --project your-project-id --force && echo 'ðŸ”¥ Dev rules deployed'",
    "deploy:rules:prod": "cp firebase.rules.prod firestore.rules && cp storage.rules.prod storage.rules && cp database.rules.prod.json database.rules.json && firebase deploy --only firestore:rules,storage:rules,database:rules --project your-project-id && echo 'ðŸ”’ Prod rules deployed'",
    "deploy:firebase": "firebase deploy --only firestore,functions,hosting",
    "deploy:vercel": "vercel --prod",
    "deploy:full": "npm run security:check && npm run deploy:firebase && npm run deploy:vercel",
    "security:check": "ts-node functions/scripts/securitySanity.ts",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test tests/smoke.test.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:seed": "ts-node --project tsconfig.scripts.json tests/utils/seedTestData.ts",
    "reset:polish": "ts-node --project tsconfig.scripts.json scripts/seed.ts --resetPolish",
    "reset:all": "ts-node --project tsconfig.scripts.json scripts/seed.ts --resetAll",
    "reset:all:force": "ts-node --project tsconfig.scripts.json scripts/seed.ts --resetAll --force",
    "test:harness": "FIRESTORE_EMULATOR_HOST=127.0.0.1:8085 ts-node --project tsconfig.scripts.json scripts/masterTestHarness.ts",
    "test:harness:keep": "FIRESTORE_EMULATOR_HOST=127.0.0.1:8085 KEEP_DATA=true ts-node --project tsconfig.scripts.json scripts/masterTestHarness.ts",
    "verify:ui": "ts-node --project tsconfig.scripts.json scripts/verifyUI.ts",
    "test:discord": "ts-node --project tsconfig.scripts.json scripts/test-discord-integration.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@headlessui/react": "^2.2.7",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@stripe/stripe-js": "^7.9.0",
    "@types/uuid": "^10.0.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.2.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "obs-websocket-js": "^5.0.6",
    "postmark": "^4.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "stripe": "^16.12.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "firebase-admin": "^13.5.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": "20.x"
  }
}
